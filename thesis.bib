@article{kawa:2022:DesignImplementationCloud,
  title = {Design and {{Implementation}} of a {{Cloud PACS Architecture}}},
  author = {Kawa, Jacek and Pyci{\'n}ski, Bart{\l}omiej and Smoli{\'n}ski, Micha{\l} and Bo{\.z}ek, Pawe{\l} and Kwasecki, Marek and Pietrzyk, Bartosz and Szyma{\'n}ski, Dariusz},
